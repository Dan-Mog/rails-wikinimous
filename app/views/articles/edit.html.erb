<h1>Editing Article</h1>

<%= form_for(@article) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: @article.title %>
  <%= f.label :content %>
  <%= f.text_field :content, placeholder: @article.content %>
  <%= f.submit value: "Update Article" %>
<% end %>

<p><%= link_to 'Show', article_path(@article) %></p>
<p><%= link_to 'Back', articles_path %></p>
